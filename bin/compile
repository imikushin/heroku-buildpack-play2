#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path

# parse args
BUILD_DIR=$(cd $1; pwd)
CACHE_DIR=$2

# chdir to $BUILD_DIR
cd $BUILD_DIR

mkdir .tmp
cd .tmp

echo "-----> Fetching play-2.0-RC1-SNAPSHOT.tgz"
curl --max-time 40 http://dl.dropbox.com/u/24364253/play-2.0-RC1-SNAPSHOT.tgz > play-2.0-RC1-SNAPSHOT.tgz
echo "-----> Extracting play-2.0-RC1-SNAPSHOT"
tar -xzf play-2.0-RC1-SNAPSHOT.tgz
cd ..

# build app
echo "-----> Running: play clean compile stage"

$BUILD_DIR/.tmp/play-2.0-RC1-SNAPSHOT/play clean compile stage 2>&1 | sed -u 's/^/       /'
if [ "${PIPESTATUS[*]}" != "0 0" ]; then
  echo " !     Failed to build app with play-2.0-RC1-SNAPSHOT"
  exit 1
fi

# remove .tmp
rm -rf .tmp

# repack cache
mkdir -p $CACHE_DIR

